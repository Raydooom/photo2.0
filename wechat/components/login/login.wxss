/* components/login.wxss */

.login-warp {
  position: fixed;
  z-index: 99;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  top: 0;
  left: 0;
}

.toast {
  width: 500rpx;
  background: #efefef;
  border-radius: 20rpx;
  color: #333;
  padding: 30rpx;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-250rpx) translateY(-123rpx);
}

.toast text {
  padding: 20rpx;
}

.toast button {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  background: #5756c0;
  color: #fff;
  font-size: 32rpx;
  margin-top: 30rpx;
}
