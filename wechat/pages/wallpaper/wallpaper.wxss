page {
  background: #222;
}

.load-text, .right-load-text {
  color: #aaa;
  width: 28rpx;
  font-size: 28rpx;
  position: fixed;
  z-index: 0;
  top: 50%;
  margin-top: -76rpx;
  left: 20rpx;
}

.right-load-text {
  left: auto;
  right: 20rpx;
}

page, swiper, swiper-item, .content-wrap {
  width: 100%;
  height: 100%;
}

swiper-item {
  position: relative;
}

.img {
  width: 100%;
  height: 100%;
}

.text-wrap {
  padding: 100rpx 40rpx 50rpx;
  position: absolute;
  width: 100%;
  bottom: 0;
  color: #fff;
  background: -webkit-gradient(linear, 0 0, 0 bottom, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 0.6)));
}

.date .day {
  font-size: 120rpx;
  color: #fff;
  letter-spacing: 0.1rem;
  display: block;
  line-height: 140rpx;
  margin-left: -0.15rem;
}

.date .month {
  display: block;
  font-size: 32rpx;
  letter-spacing: 0.1rem;
  padding-bottom: 40rpx;
}

.text-wrap .text {
  font-size: 40rpx;
  line-height: 68rpx;
  letter-spacing: 0.1rem;
}

.text-wrap .line {
  background: #fff;
  width: 80rpx;
  height: 6rpx;
  margin: 40rpx 0;
  opacity: 0.6;
}

.text-wrap .title {
  font-size: 32rpx;
  letter-spacing: 0.1rem;
  height: 40rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
}

.text-wrap .handle {
  display: flex;
}

.handle .down {
  font-size: 28rpx;
  border-radius: 20rpx;
  border: 2rpx solid #fff;
  line-height: 36rpx;
  padding: 0 20rpx;
  margin-right: 40rpx;
  opacity: 0.8;
}

.handle .down image {
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
}

.handle .praise image {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
