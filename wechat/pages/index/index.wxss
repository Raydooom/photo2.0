/* pages/hot/hot.wxss */

page {
  padding-bottom: 10rpx;
}

.top-title .main-title {
  padding: 25rpx 40rpx;
  font-size: 70rpx;
  font-weight: bold;
  display: block;
}

swiper {
  height: 360rpx;
  margin-bottom: 30rpx;
}

swiper-item {
  padding: 0 10rpx;
}

swiper-item image {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
}

.swiper-item {
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  height: 360rpx;
}

.swiper-item .article-info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 40rpx;
  background: -webkit-gradient(linear, 0 0, 0 bottom, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 0.5)));
}

swiper-item .title {
  font-size: 36rpx;
  display: block;
  color: #fff;
  max-width: 460rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

swiper-item .discription {
  font-size: 28rpx;
  color: #fff;
  display: block;
  max-width: 460rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  opacity: 0.8;
}

.main-view {
  position: absolute;
  bottom: 20rpx;
  right: 40rpx;
  color: #fff;
  font-size: 28rpx;
}

.main-view image {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  vertical-align: middle;
}

/* 分类模块 */

.classify {
  background: #fafafa;
}

.classify-title {
  background: #fff;
  padding-top: 20rpx;
  display: flex;
  flex-wrap: nowrap;
  border-bottom: 1rpx solid #efefef;
}

.classify-title .class-name {
  flex-grow: 1;
  font-size: 34rpx;
  text-align: center;
  color: #333;
  line-height: 88rpx;
  border-bottom: 4rpx solid #fff;
}

.classify-title .class-name.active {
  color: #5756c0;
  border-bottom: 4rpx solid #5756c0;
}

.aritcle-list {
  padding: 30rpx 18rpx;
}

.aritcle-list .article-item {
  margin-bottom: 30rpx;
  overflow: hidden;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 4rpx 8rpx 10rpx rgba(0, 0, 0, 0.05);
}

.clover {
  width: 240rpx;
  height: 200rpx;
  float: left;
}

.article-info {
  float: left;
  padding: 0 30rpx;
  width: 462rpx;
}

.article-title {
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #222;
  line-height: 44rpx;
  height: 108rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article-view {
  padding-top: 40rpx;
  font-size: 28rpx;
  color: #999;
  vertical-align: middle;
}

.article-view image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  display: inline-block;
  margin-right: 10rpx;
}
