/* pages/hot/hot.wxss */

page {
  padding-bottom: 10rpx;
  height: 100%;
}

.top-title .main-title {
  padding: 25rpx 40rpx;
  font-size: 70rpx;
  font-weight: bold;
  display: block;
}

swiper {
  height: 360rpx;
  margin-bottom: 30rpx;
}

swiper-item {
  padding: 0 10rpx;
}

swiper-item image {
  width: 100%;
  height: 360rpx;
  border-radius: 20rpx;
}

.swiper-item {
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  height: 360rpx;
}

.swiper-item .article-info {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 40rpx;
  background: -webkit-gradient(linear, 0 0, 0 bottom, from(rgba(0, 0, 0, 0)), to(rgba(0, 0, 0, 0.5)));
}

swiper-item .title {
  font-size: 36rpx;
  display: block;
  color: #fff;
  max-width: 460rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

swiper-item .discription {
  font-size: 28rpx;
  color: #fff;
  display: block;
  max-width: 460rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  opacity: 0.8;
}

.main-view {
  position: absolute;
  bottom: 20rpx;
  right: 40rpx;
  color: #fff;
  font-size: 28rpx;
}

.main-view image {
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
  vertical-align: middle;
}

.classify.addPadding {
  padding-top: 92rpx;
}

.title-warp {
  background: #f40;
}

.title-warp.fixed {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
