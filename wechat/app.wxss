/**app.wxss**/

/* 模型盒设置 */

view, text, input, textarea, button, navigator, swiper-item {
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}

navigator:hover {
  background: none;
}

/* template 文章列表 */

/* 分类模块 */

.classify {
  background: #fafafa;
}

.classify-title {
  background: #fff;
  padding-top: 20rpx;
  display: flex;
  flex-wrap: nowrap;
  border-bottom: 1rpx solid #efefef;
}

.classify-title .class-name {
  flex-grow: 1;
  font-size: 34rpx;
  text-align: center;
  color: #333;
  line-height: 88rpx;
  border-bottom: 4rpx solid #fff;
}

.classify-title .class-name.active {
  color: #5756c0;
  border-bottom: 4rpx solid #5756c0;
}

.aritcle-list {
  padding: 30rpx 18rpx;
}

.aritcle-list .article-item {
  margin-bottom: 30rpx;
  overflow: hidden;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 4rpx 8rpx 10rpx rgba(0, 0, 0, 0.05);
}

.aritcle-list .clover {
  width: 240rpx;
  height: 200rpx;
  float: left;
}

.aritcle-list .article-info {
  float: left;
  padding: 0 30rpx;
  width: 462rpx;
}

.aritcle-list .article-title {
  padding-top: 20rpx;
  font-size: 30rpx;
  color: #222;
  line-height: 44rpx;
  height: 108rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.aritcle-list .article-view {
  padding-top: 40rpx;
  font-size: 28rpx;
  color: #999;
  vertical-align: middle;
}

.aritcle-list .article-view image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  display: inline-block;
  margin-right: 10rpx;
}
